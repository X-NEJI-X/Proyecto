{
  "compilerOptions": {
    "target":"ES2022",
    "module":"NodeNext",
    "moduleResolution":"NodeNext",
    "outDir":"./dist",
    "rootDir":"./src",
    "strict":true,
    "esModuleInterop":true,
    "skipLibCheck":true,
    "forceConsistentCasingInFileNames":true,
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@middlewares/*": ["middlewares/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@views/*": ["views/*"]
    },
    "types": ["node"],
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "alwaysStrict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests", "**/*.spec.ts"]
}